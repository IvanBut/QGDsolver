FoamFile
{
    version         2.0;
    format          ascii;
    class           volScalarField;
    object          T;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    outlet      
    {
        type            fixedValue;
	value		uniform 300;
    }

    fixedWalls      
    {
        type            zeroGradient;
    }

}


