{
    particleForces
    {
        sphereDrag;
        gravity;
    }
    
    dispersionModel none;
    
    patchInteractionModel standardWallInteraction;
    
    standardWallInteractionCoeffs
    {
        type            rebound;
    }
    
    stochasticCollisionModel none;
    
    surfaceFilmModel none;
    
    heatTransferModel RanzMarshall;
    
    RanzMarshallCoeffs
    {
        BirdCorrection  off;
    }
    
    radiation       off;
    
    
    injectionModels
    {
        model1
        {
            type            patchInjection;
            massTotal       0.007;
            SOI             0;
            parcelBasisType mass;
//            nParticle       1;
            patch           outlet;
            duration        0.4;
            parcelsPerSecond 1e6;
            U0              (0. 8. 0.);
            flowRateProfile constant 1;
            sizeDistribution
            {
                type        RosinRammler;
                RosinRammlerDistribution
                {
                    minValue        0.001;
                    maxValue        0.009;
                    d               0.004;
                    n               0.5;
                }
            }
        }
    }
