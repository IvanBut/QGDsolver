    {
        type            fixedValue;
        value           uniform 293.0;
//        type            zeroGradient;
    }

    outlet
    {
        type            zeroGradient;
    }

    "(topAndBottom|back)"
    {
        type            zeroGradient;
    }

    sym
    {
        type            symmetry; //zeroGradient;
    }

    leftwall 
    {
        type            zeroGradient;
    }
}

