//Right state
defaultFieldValues
(
    volScalarFieldValue p  0.4
    volScalarFieldValue T  0.00138
    volScalarFieldValue O2 0.21
    volScalarFieldValue N2 0.79
    volVectorFieldValue U ( -1 0 0 )
);

//Left state
regions
(
    boxToCell
    {
        box ( -1 -1 -1 ) ( 0.5 1  1 );
        fieldValues
        (
            volScalarFieldValue p  0.4
            volScalarFieldValue T  0.00138
            volScalarFieldValue O2 0.21
            volScalarFieldValue N2 0.79
            volVectorFieldValue U ( 1 0 0 )
        );
    }
);

