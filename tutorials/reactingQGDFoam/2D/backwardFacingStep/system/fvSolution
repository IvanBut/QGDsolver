FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(rho|rhoU|rhoE)"
    {
        solver diagonal;
    }

    "(U|e|Yi|h|O2|N2).*"
    {
        solver         PCG;
        preconditioner DIC;
        tolerance      1e-9;
        relTol         0;
    }
}

